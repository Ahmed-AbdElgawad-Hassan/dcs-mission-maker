{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space",
    "ignore": ["dist", "node_modules"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["dist", "node_modules"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}